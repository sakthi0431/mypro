pipeline {
    agent any

    environment {
        // Jenkins credentials ID that stores 'admin'/'admin' for Tomcat
        TOMCAT_CREDENTIALS = credentials('tomcat-admin-creds')
        WAR_NAME = "myapp.war"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/sakthi0431/mypro.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                // Ensure Tomcat manager is accessible on port 6500
                deploy adapters: [tomcat9(
                    credentialsId: "${TOMCAT_CREDENTIALS}",
                    path: '',
                    url: 'http://your-tomcat-ip:6500'
                )],
                contextPath: '/myapp',
                war: "target/${WAR_NAME}"
            }
        }
    }

    post {
        success {
            echo '✅ Deployment successful!'
        }
        failure {
            echo '❌ Build or deployment failed!'
        }
    }
}
